<% form_for(@photo, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :file %><br />
    <%= file_field_tag :file, :accept => 'text/html' %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.collection_select(:category_id, Category.all_active, :id, :name) %>
  </p>
  <p>
    <%= f.label :caption %><br />
    <%= f.text_field :caption %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', photos_path %>
